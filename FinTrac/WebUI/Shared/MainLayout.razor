@inherits LayoutComponentBase
@using BusinessLogic
@inject MemoryDatabase MemoryDatabase
@inject ToastService ToastService

<PageTitle>WebUI</PageTitle>

<div class="page">

	<div class="sidebar">
		<NavMenu />
	</div>

	<main>
		@if (MemoryDatabase.isLoggedIn)
		{
			<div class="top-row px-4">
				<NavLink class="nav-link" href="/profile" name="@name">
					@MemoryDatabase.currentUser.Name
				</NavLink>
			</div>
		}

		<article class="content px-4">
			@Body
		</article>
	</main>
</div>
<Toasts class="p-3 mt-5" AutoHide="true" Delay="4000" Placement="ToastsPlacement.TopRight"/>



@code {
	private String name;

	protected override void OnInitialized()
	{
		if (MemoryDatabase.isLoggedIn)
		{
			name = MemoryDatabase.currentUser.Name;
		}

	}

	public void LogOut()
	{
		MemoryDatabase.isLoggedIn = false;
	}
}