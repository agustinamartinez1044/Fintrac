@inherits LayoutComponentBase
@using BusinessLogic
@inject MemoryDatabase MemoryDatabase

<PageTitle>WebUI</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="/login" @onclick="LogOut">LogOut</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>


@code {
    public void LogOut()
    {
        MemoryDatabase.isLoggedIn = false;
    }
}