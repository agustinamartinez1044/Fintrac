@page "/profile"
@using Domain 
@using BusinessLogic

<PageTitle>Profile</PageTitle>

<h1>Perfil</h1>

<div class="profile-header">
    <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" width="10%" />
    <div class="profile-info">
        <h2>John Doe</h2>
        <p>Montevideo, Uruguay</p>
    </div>
</div>
<div class="profile-details">
    <h3>Información del perfil</h3>

    <div class="profile-field">
        <label for="first-name">Nombre</label><br />
        <input type="text" id="first-name" value="John" />
    </div>

    <div class="profile-field">
        <label for="email-address">Dirección de correo electrónico</label><br />
        <input type="email" id="email-address" value="john.Doe@mail.com" />
    </div>

    <div class="profile-field">
        <label for="last-name">Apellido</label><br />
        <input type="text" id="last-name" value="Doe" />
    </div>

    <div class="profile-field">
        <label for="phone-number">Número de teléfono</label><br />
        <input type="text" id="phone-number" value="111 111 111" />
    </div>

    <div class="profile-field">
        <label for="state">Estado</label><br />
        <input type="text" id="state" value="Montevideo" />
    </div>

    <div class="profile-field">
        <label for="country">País</label><br />
        <input type="text" id="country" value="Uruguay" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar detalles</button>
</div>

<style>
    .profile-header {
        background-color: #fff;
        margin-top: 1rem;
        margin-bottom: 1rem;
    }

    .profile-info {
        margin-bottom: 1rem;
        margin-top: 1rem;
    }

        .profile-info h2 {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .profile-info p {
            font-size: 1rem;
        }

    .profile-details {
        margin-top: 1rem;
        margin-bottom: 1rem;
    }

    .profile-field {
        margin-bottom: 1rem;
    }

        .profile-field label {
            font-weight: bold;
        }

        .profile-field input {
            width: 50%;
        }

    .btn {
        width: 50%;
    }
</style>