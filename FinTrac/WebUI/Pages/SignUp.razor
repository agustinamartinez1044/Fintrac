@page "/sign-up"

<PageTitle>Sign Up</PageTitle>

@using Domain;
@using BusinessLogic;
@inject NavigationManager NavigationManager

@inject MemoryDatabase MemoryDatabase;

<div id="main-wrapper" class="container">
    <div class="row justify-content-center">
        <div class="col-xl-10">
            <div class="card border-0">
                <div class="card-body p-0">
                    <div class="row no-gutters">
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="mb-5">
                                    <h3 class="h4 font-weight-bold text-theme">Registrarse</h3>
                                </div>

                                <h6 class="h5 mb-0">Bienvenido</h6>
                                <p class="text-muted mt-2 mb-5">Para registrarse ingrese las credenciales que se piden a continuacion</p>

                                <form @onsubmit="RegisterUser">
                                    <div class="form-group mb-2">
                                        <label for="name">Nombre </label>
                                        <input required type="text" class="form-control" @bind="user.Name" id="name">
                                    </div>

                                    <div class="form-group mb-2">
                                        <label for="last-name">Apellido </label>
                                        <input required type="text" class="form-control" @bind="user.LastName" id="last-name">
                                    </div>

                                    <div class="form-group mb-2">
                                        <label for="address">Dirección (Opcional) </label>
                                        <input type="text" class="form-control" @bind="user.Address" id="address">
                                    </div>

                                    <div class="form-group mb-2">
                                        <label for="email"> Correo Electrónico </label>
                                        <input required type="email" class="form-control" @bind="user.Email" id="email">
                                    </div>

                                    <div class="form-group mb-2">
                                        <label for="password">Contraseña</label>
                                        <input required type="password" class="form-control" @bind="user.Password" id="password">
                                    </div>

                                    <button type="submit" class="btn btn-theme"> Registrarse </button>
                                    <a href="/login" class="forgot-link float-right text-primary small">Tiene una cuenta? Iniciar Sesion</a>
                                </form>
                            </div>
                        </div>

                        <div class="col-lg-6 d-none d-lg-inline-block">
                            <div class="account-block rounded-right">
                                <div class="overlay rounded-right"></div>
                                <div class="account-testimonial">
                                    <h4 class="text-white mb-4">Texto</h4>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- end card-body -->
            </div>
            <!-- end card -->
            <!-- end row -->
        </div>
        <!-- end col -->
    </div>
    <!-- Row -->
</div>

<style>
    body {
        margin-top: 20px;
        background: #f6f9fc;
    }

    .account-block {
        padding: 0;
        background-image: url(https://bootdey.com/img/Content/bg1.jpg);
        background-repeat: no-repeat;
        background-size: cover;
        height: 100%;
        position: relative;
    }

        .account-block .overlay {
            -webkit-box-flex: 1;
            -ms-flex: 1;
            flex: 1;
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            background-color: rgba(0, 0, 0, 0.4);
        }

        .account-block .account-testimonial {
            text-align: center;
            color: #fff;
            position: absolute;
            margin: 0 auto;
            padding: 0 1.75rem;
            bottom: 3rem;
            left: 0;
            right: 0;
        }

    .text-theme {
        color: #5369f8 !important;
    }

    .btn-theme {
        background-color: #5369f8;
        border-color: #5369f8;
        color: #fff;
    }
</style>

@code {
    private User user;
    private UserService _userService;

    protected override void OnInitialized()
    {
        user = new User();
        _userService = new UserService(MemoryDatabase);
    }

    public void RegisterUser()
    {
        _userService.Add(user);
        NavigationManager.NavigateTo("/login");
    }
}
